<%- include("template/header", {title})%>
<%- include("template/nav")%>
<div class="container">

      <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                  <div id="success" class="alert alert-success" <% if(noMsg){%>hidden <% } %>>
                        <%= successMsg %>
                  </div>
            </div>
      </div>

      <% products.forEach(function(product) { %>
            <div class="row">
                  <% product.forEach(function(item) { %>
                        <div class="col-sm-6 col-md-4">
                              <div class="thumbnail">
                                    <img src="<%= item.imagePath %>" alt="..." class="img-responsive" />
                                    <div class="caption">
                                          <h3>
                                                <%= item.title %>
                                          </h3>
                                          <p class="description">
                                                <%= item.description %>
                                          </p>
                                          <div class="clearfix">
                                                <div class="price pull-left">$<%= item.price %>
                                                </div>
                                                <a href="/add-to-cart/<%= item._id %>" class="btn btn-success pull-right"
                                                      role="button">Add to cart</a>
                                          </div>
                                    </div>
                              </div>
                        </div>
                        <% }); %>
            </div>
            <% }); %>
</div>
<%- include("template/footer")%>